<local:CommandButtonCommandBar
    x:Class="PhotoEditing.CommandButton.Controls.Inking"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoEditing.CommandButton.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Button x:Name="CreateNewLayer" x:FieldModifier="Public" Content="Create New Inking Layer" Margin="0,0,10,0"/>
    <ToggleButton x:Name="TouchDraw" x:FieldModifier="Public" Content="Touch Drawing" Margin="0,0,10,0"/>
    <InkToolbar x:Name="InkControl" x:FieldModifier="Public" Margin="0,0,10,0" InitialControls="None">
        <InkToolbarBallpointPenButton/>
        <InkToolbarPencilButton/>
        <InkToolbarHighlighterButton/>
        <InkToolbarEraserButton/>
        <InkToolbarStencilButton x:Name="StencilButton" x:FieldModifier="Public"/>
    </InkToolbar>
</local:CommandButtonCommandBar>